{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-DLINUX3",
                "-I./include",
                "-L./lib/linux3",
                "-D_FDU05",
                "main.cpp",
                "-lsgfplib",
                "-lsgnfiq",
                "-lsgfpamx",
                "-lsgfdu05",
                "-lusb",
                "-lpthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}